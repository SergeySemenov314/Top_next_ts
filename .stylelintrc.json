{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-property-sort-order-smacss"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"selector-class-pattern": "^.*$",
		"declaration-block-no-redundant-longhand-properties": [
			true,
			{
				"ignoreShorthands": [
					"/grid/"
				]
			}
		]
	}
}